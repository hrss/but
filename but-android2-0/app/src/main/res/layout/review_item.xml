<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:onClick="viewReview"
    android:layout_height="wrap_content"
    android:padding="6dip">

    <RelativeLayout
        android:id="@+id/review_owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/profilePictureReviewList"
            android:src="@drawable/profpic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="TODO"

            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal|top"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/review_owner"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/is"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignWithParentIfMissing="true"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/good_quote"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_alignWithParentIfMissing="true"
            android:textSize="16sp"
            android:layout_below="@+id/is"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/plusGood"
            android:layout_width="wrap_content"
            android:textColor="@color/secondary_color"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignWithParentIfMissing="true"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/good_quote"
            android:layout_toRightOf="@+id/is"
            android:layout_toEndOf="@+id/is"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp" />

        <TextView
            android:id="@+id/but"
            android:text="@string/but"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:gravity="center"
            android:textColor="@color/primary_color"
            android:textSize="16sp"
            android:layout_below="@+id/good_quote"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/plusBad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/primary_color"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="true"
            android:textSize="14sp"
            android:layout_above="@+id/bad_quote"
            android:layout_alignLeft="@+id/plusGood"
            android:layout_alignStart="@+id/plusGood" />


        <TextView
            android:id="@+id/bad_quote"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:layout_below="@+id/but"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
</RelativeLayout>