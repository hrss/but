<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_navigate_before_black_18dp"
        android:id="@+id/previous_item"
        android:onClick="showPreviousItem"
        android:layout_alignTop="@+id/next_item"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:id="@+id/position"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/previous_item"
        android:layout_toEndOf="@+id/previous_item" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:id="@+id/quote"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/count"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/next_item"
        android:layout_toStartOf="@+id/next_item" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_navigate_next_black_18dp"
        android:onClick="showNextItem"
        android:id="@+id/next_item"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>