<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asdfsdfas as fasdf "
        android:id="@+id/quote"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_alignTop="@+id/previous_item"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_navigate_next_black_18dp"
        android:id="@+id/next_item"
        android:layout_gravity="end"
        android:onClick="showNextItem"
        android:layout_alignTop="@+id/quote"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_navigate_before_black_18dp"
        android:id="@+id/previous_item"
        android:onClick="showPreviousItem"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>